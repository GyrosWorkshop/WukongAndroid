<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.senorsen.wukong.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#eee"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/drawer_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_drawer_user"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_user"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Sign in"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_drawer_channel"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_channel"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="Channel"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_settings"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_settings"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/settings"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_sync_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_sync_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_sync_playlist"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_sync_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_sync_playlist"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/sync_playlists"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_shuffle_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_shuffle_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_shuffle_playlist"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_shuffle_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_shuffle_playlist"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/shuffle"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/drawer_clear_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icon_drawer_clear_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_clear_playlist"
                android:paddingEnd="10dp" />

            <TextView
                android:id="@+id/text_drawer_clear_playlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/icon_drawer_clear_playlist"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/clear"
                android:textAppearance="?android:attr/textAppearanceListItemSmall" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
